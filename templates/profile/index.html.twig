{% extends 'base.html.twig' %}

{% block title %}ProfileController!{% endblock %}

{% block body %}
<div>
    {% set total_quantity = 0 %}
    {% set total_balance = 0 %}
    <h1>User name: {{ user.username }}</h1>
    <h1> You have {{ user.portfolios|length }} portfolios: </h1>

    {% for portfolio in user.portfolios %}
        <span> Portfolio {{ portfolio.id }} has {{ portfolio.balance }} money and has stocks: </span>
        {% set total_balance = total_balance + portfolio.balance %}
        <br>
        {% for depositary in portfolio.depositaries %}
            {% set total_quantity = total_quantity + depositary.quantity %}
            Stock name: {{ depositary.stock.name}}, quantity: {{depositary.quantity}}
            <br>
        {% endfor %}
        <br>
    {% endfor %}

    <h1> Total quantity: {{ total_quantity }} </h1>
    <h1> Total balance: {{ total_balance }} </h1>
</div>
{% endblock %}
